
<div class="row text-center mt-3">
    <h2>Welcome {{username}}</h2>
</div>
<div class="row justify-content-center">
<div class="card
          align
          mx-2
          mt-2
          bg-light
          text-black
          customCard "  style="width: 23rem;">
        <div class="img-profile mt-2 mb-2 ">
        <img src="https://user-images.githubusercontent.com/82244776/134595680-b39c82e2-0d0d-40bb-a0d6-0a6cd7899227.png" class="card-img-top" style="height: 250px; width: 300px;" alt="profile-pic">
        </div>
        <h5 class="card-header" style="text-align:center;">{{first_name}} {{last_name}}</h5>
        <section class="card-body" style="font-size: 14px;">
            <div>
                <p>Name : {{nickname}}</p>
            </div>
            <div>
                <p>About me : {{about}}
            </div>
            <div>
                <p>Contact me : {{email}}</p>
            </div>
            <div style="text-align: center;">
             <a role="button" href="/profile" class="btnProfile btn btn-primary">Update Profile</a>
            </div>
        </section>
    </div>
</div>
<hr class="container my-5 d-flex">
<div class="justify-content-center text-center mt-5 mb-1">
    <div class="row text-center mt-3">
        <h3>Postingan anda selama ini {{username}}</h3>
    </div>
    {{#each posts as |post|}}
    {{> dash-posts}}
    {{/each}}
</div>
